datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Subdomain {
  id          String   @id @default(cuid())
  name        String   @unique // 'alice' (without .x402email.com)
  ownerWallet String
  dnsVerified Boolean  @default(false)
  sesVerified Boolean  @default(false)
  paymentTx   String?
  createdAt   DateTime @default(now())
  signers     Signer[]
  sendLogs    SendLog[]

  @@index([ownerWallet])
}

model Signer {
  id            String    @id @default(cuid())
  subdomain     Subdomain @relation(fields: [subdomainId], references: [id])
  subdomainId   String
  walletAddress String
  addedAt       DateTime  @default(now())

  @@unique([subdomainId, walletAddress])
}

model Inbox {
  id              String         @id @default(cuid())
  username        String         @unique
  forwardTo       String
  ownerWallet     String
  expiresAt       DateTime
  active          Boolean        @default(true)
  retainMessages  Boolean        @default(false)
  lastReminderAt  DateTime?
  createdAt       DateTime       @default(now())
  sendLogs        SendLog[]
  messages        InboxMessage[]

  @@index([ownerWallet])
}

model InboxMessage {
  id         String   @id @default(cuid())
  inbox      Inbox    @relation(fields: [inboxId], references: [id])
  inboxId    String
  s3Key      String
  fromEmail  String
  subject    String
  receivedAt DateTime @default(now())
  read       Boolean  @default(false)

  @@index([inboxId, receivedAt])
}

model SendLog {
  id           String     @id @default(cuid())
  subdomain    Subdomain? @relation(fields: [subdomainId], references: [id])
  subdomainId  String? // null = shared domain
  inbox        Inbox?     @relation(fields: [inboxId], references: [id])
  inboxId      String?
  senderWallet String?
  fromEmail    String
  toEmails     String[] // Postgres native array
  subject      String
  sesMessageId String?
  createdAt    DateTime @default(now())
}

// SIWxStorage backing â€” tracks which wallets paid for which resources
model SiwxPayment {
  id            String   @id @default(cuid())
  resource      String
  walletAddress String
  createdAt     DateTime @default(now())

  @@unique([resource, walletAddress])
}

// Nonce tracking for SIWX replay prevention
model SiwxNonce {
  nonce  String   @id
  usedAt DateTime @default(now())
}
